datasource db {
  provider = "sqlite" // Use SQLite as the database
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Language {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  questions Question[]
}

model Question {
  id         Int       @id @default(autoincrement())
  language   String
  difficulty String // Values can now be 'Beginner', 'Intermediate', 'Advanced'
  question   String
  options    String // Store options as a JSON string or comma-separated values
  answer     String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  Language   Language? @relation(fields: [languageId], references: [id])
  languageId Int?
  Attempt    Attempt[]
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  attempts Attempt[]
}

model Attempt {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])
  isCorrect  Boolean
  points     Int // +1 for correct, -1 for incorrect
  createdAt  DateTime @default(now())
}
